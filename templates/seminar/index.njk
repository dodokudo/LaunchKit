{% set assets = paths.assets %}
<!DOCTYPE html>
<html lang="ja">
<head prefix="og: http://ogp.me/ns#">
  {% for snippet in tag_manager.head %}
  {{ snippet | safe }}
  {% endfor %}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="content-style-type" content="text/css">
  <meta http-equiv="content-script-type" content="text/javascript">
  <meta http-equiv="Pragma" content="no-cache" />
  <meta http-equiv="Cache-Control" content="no-cache" />
  <title>{{ meta.title }}</title>
  <meta name="Description" content="{{ meta.description }}" />
  <meta name="Keywords" content="{{ meta.keywords }}" />
  <meta property="og:title" content="{{ meta.og.title }}">
  <meta property="og:type" content="{{ meta.og.type }}">
  <meta property="og:url" content="{{ meta.og.url }}">
  <meta property="og:image" content="{{ meta.og.image }}">
  <meta property="og:site_name" content="{{ meta.og.site_name }}">
  <meta property="og:description" content="{{ meta.og.description }}">
  <meta property="og:locale" content="{{ meta.og.locale }}">
  <meta property="fb:app_id" content="{{ meta.fb_app_id }}">
  <meta name="twitter:card" content="{{ meta.twitter_card }}">
  <link href="{{ assets }}/css/sanitize.min.css" rel="stylesheet" type="text/css" media="all">
  <link href="{{ assets }}/css/style.css" rel="stylesheet" type="text/css" media="all">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="shortcut icon" href="{{ assets }}/images/favicon.ico">
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script type="text/javascript" src="{{ assets }}/js/lazysizes.min.js"></script>
  <script type="text/javascript" src="{{ assets }}/js/cookie.js"></script>
  <script type="text/javascript" src="{{ assets }}/js/common.js"></script>
  <script type="text/javascript" src="{{ assets }}/js/count.js"></script>
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <![endif]-->
</head>
<body>
  {% for snippet in tag_manager.body %}
  {{ snippet | safe }}
  {% endfor %}
  <div id="wrapper">
    <header>
      {% if countdown.enabled %}
      <div class="wrap_timer">
        <div class="countdown" data-deadline="{{ countdown.deadline }}"></div>
      </div>
      {% endif %}
      {% if caution.image %}
      <div class="caution">
        <img src="{{ assets }}/{{ caution.image }}" alt="{{ caution.alt }}">
      </div>
      {% endif %}
    </header>
    <main>
      {% if video %}
      <section class="video">
        <div class="wrap_video">
          {% if video.type == 'youtube' %}
          <iframe src="https://www.youtube.com/embed/{{ video.id }}" title="{{ video.title }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          {% elif video.type == 'iframe' %}
          {{ video.embed | safe }}
          {% endif %}
        </div>
      </section>
      {% endif %}
      {% macro heading_image(section, assets) %}
        {% if section.heading_image %}
        <h2>
          <img src="{{ assets }}/{{ section.heading_image.src }}" alt="{{ section.heading_image.alt }}">
        </h2>
        {% endif %}
      {% endmacro %}
      {% for section in sections %}
      <section class="{{ section.class }}">
        {{ heading_image(section, assets) }}
        {% if section.type == 'image-gallery' %}
        <div class="{{ section.wrapper_class }}">
          {% for image in section.images %}
          <img {% if image.class %}class="{{ image.class }}" {% endif %}src="{{ assets }}/{{ image.src }}" alt="{{ image.alt }}">
          {% endfor %}
        </div>
        {% elif section.type == 'list' %}
        <div class="{{ section.wrapper_class }}">
          <ul class="{{ section.list_class }}">
            {% for item in section.items %}
            <li>{{ item | safe }}</li>
            {% endfor %}
          </ul>
        </div>
        {% elif section.type == 'bonus' %}
        <div class="{{ section.wrapper_class }}">
          {% for item in section.items %}
          <div class="{{ section.item_class }}">
            <img src="{{ assets }}/{{ item.src }}" alt="{{ item.alt }}">
          </div>
          {% endfor %}
        </div>
        {% if section.button %}
        <div class="wrap_cta">
          <a class="btn" href="{{ section.button.url }}">{{ section.button.text }}</a>
        </div>
        {% endif %}
        {% elif section.type == 'cta' %}
        <div class="wrap_cta">
          <a class="btn" href="{{ section.button.url }}">{{ section.button.text }}</a>
        </div>
        {% elif section.type == 'faq' %}
        <div class="{{ section.wrapper_class or 'wrap_faq' }}">
          <dl class="faq_list">
            {% for item in section.items %}
            <div class="faq_item">
              <dt>{{ item.question }}</dt>
              <dd>{{ item.answer | safe }}</dd>
            </div>
            {% endfor %}
          </dl>
        </div>
        {% elif section.type == 'testimonials' %}
        <div class="{{ section.wrapper_class or 'wrap_voice' }}">
          {% for item in section.items %}
          <div class="voice_card">
            <p class="voice_quote">“{{ item.quote | safe }}”</p>
            <p class="voice_name">
              {{ item.name }}
              {% if item.title %}<span>{{ item.title }}</span>{% endif %}
            </p>
          </div>
          {% endfor %}
        </div>
        {% elif section.type == 'html' %}
        <div class="{{ section.wrapper_class }}">
          {{ section.html | safe }}
        </div>
        {% endif %}
      </section>
      {% endfor %}
    </main>
  </div>
  {% if client_state is defined %}
  <script>
    window.LP_CONFIG = {{ client_state | dump }};
  </script>
  {% endif %}
</body>
</html>
